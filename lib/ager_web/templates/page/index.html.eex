<%= if Enum.count(@persons) != 0 do %>
    <h3>Search results (<%= Enum.count(@persons) %>)</h3>
        <div class="container">
        <ul class="list-unstyled">
            <%= for p <- @persons do %>
                <li>
                    <div class="row">
                        <div class="col-8">
                            <%= p.full_name %>
                        </div>
                        <div class="col">
                            <%= Ager.Utils.calculate_age(p.birthday) %>
                        </div>
                        <div class="col">
                            <%= p.birthday %>
                        </div>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>
<% end %>
